<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/dialog_add_point_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@drawable/dialog_btn_text_color"
            android:textSize="@dimen/text_size_18"
            android:gravity="center"
            android:text="@string/dialog_add_point_foot_cancel"/>

        <TextView
            android:id="@+id/dialog_add_point_sure"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@drawable/dialog_btn_text_color"
            android:textSize="@dimen/text_size_18"
            android:text="@string/dialog_input_wifi_btn_sure"
            android:gravity="center"/>

</LinearLayout>